{
	"compileOnSave": true,
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"target": "ESNext",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"strict": true,
		"outDir": "build",
		"resolveJsonModule": true,
		"sourceMap": false,
		"inlineSourceMap": true,
		"incremental": true,
		"lib": ["ESNext", "ESNext.Array", "ESNext.AsyncIterable", "ESNext.Intl"],
		"baseUrl": "./src/",
		"declaration": true,
		"paths": {
			"@client": ["core/client/index.ts"],
			"@api": ["core/api/index.ts"],
			"@database": ["core/database/index.ts"],
			"@shared": ["core/shared/index.ts"],
			"@typings": ["core/typings/index.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
